// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// スタイル情報 - YouTuberのノウハウ
model Style {
  id        String   @id
  title     String
  type      String
  selected  Boolean  @default(false)
  content   String   @db.Text
  createdAt String   @default("")
  videoUrl  String?  @map("video_url")
  updatedAt DateTime @updatedAt
  createdAtDateTime DateTime @default(now()) @map("created_at")

  @@map("styles")
}

// ソース情報 - 参考動画/資料
model Source {
  id        String   @id
  title     String
  type      String
  selected  Boolean  @default(false)
  content   String   @db.Text
  createdAt String   @default("")
  videoUrl  String?  @map("video_url")
  updatedAt DateTime @updatedAt
  createdAtDateTime DateTime @default(now()) @map("created_at")

  @@map("sources")
}

// シナリオ - 動画シナリオ
model Scenario {
  id        String   @id
  title     String
  type      String
  selected  Boolean  @default(false)
  content   String   @db.Text
  createdAt String   @default("")
  updatedAt DateTime @updatedAt
  createdAtDateTime DateTime @default(now()) @map("created_at")

  @@map("scenarios")
}

// チャットメッセージ
model ChatMessage {
  id        String   @id
  role      String // 'user' | 'assistant' | 'system'
  content   String   @db.Text
  timestamp String   @default("")
  createdAt DateTime @default(now()) @map("created_at")

  @@map("chat_messages")
}

// ジョブ管理 - AI処理の非同期実行
model Job {
  id                String   @id @default(uuid())
  type              JobType
  status            JobStatus @default(PENDING)
  input             Json     // 処理入力パラメータ
  result            Json?    // 処理結果
  error             String?  // エラーメッセージ
  retryCount        Int      @default(0)
  maxRetries        Int      @default(3)
  priority          Int      @default(0) // 高い数値ほど高優先度
  startedAt         DateTime?
  completedAt       DateTime?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@index([status])
  @@index([type, status])
  @@index([createdAt])
  @@map("jobs")
}

enum JobType {
  ANALYZE_VIDEO
  ANALYZE_FILE
  GENERATE_SCENARIO
}

enum JobStatus {
  PENDING      // 処理待ち
  PROCESSING   // 処理中
  COMPLETED    // 完了
  FAILED       // 失敗（リトライ可能）
  CANCELLED    // キャンセル済み
}
